@model List<MyPortfolio.DAL.Entities.Experience>
<div class="row about-content about-content--timeline">
    <style>
        body {
            /* Arka plan resmini tanımlama */
            background-image: url('https://resmim.net/cdn/2024/07/30/W1y4HM.webp');
            background-size: cover; /* Resmi tam olarak kaplamasını sağlar */
            background-position: center; /* Resmin ortalanmasını sağlar */
            background-repeat: no-repeat; /* Resmin tekrarını engeller */
            background-attachment: fixed; /* Resmin kaydırıldığında sabit kalmasını sağlar */
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }
    </style>


    <div class="col-full text-center">
        <h3>Deneyimlerim</h3>
    </div>


    @foreach (var item in Model)
    {
        <div class="col-six tab-full left">
            <div class="timeline">
                <div class="timeline__block">
                    <div class="timeline__bullet"></div>
                    <div class="timeline__header">
                        <p class="timeline__timeframe">@item.Date</p>
                        <h3>@item.Head</h3>
                        <h5>@item.Title</h5>
                    </div>
                    <div class="timeline__desc">
                        <p>@item.Description</p>
                    </div>
                </div>

            </div> 
        </div>
    }
</div>
